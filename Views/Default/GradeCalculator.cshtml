@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;

<!-- Grade Calculator -->
<h4>IS 413 Grade Calculator</h4>
<p>Input each category's percentage as a whole number (i.e. 73% = 73).</p>
<form method="post">
    <label>Assignments:</label>
    <input type="number" size="10" id="assignment" asp-for="Assignment" /><br />
    <label>Group Project:</label>
    <input type="number" size="10" id="group" asp-for="Group" /><br />
    <label>Quizzes:</label>
    <input type="number" size="10" id="quiz" asp-for="Quiz" /><br />
    <label>Exams:</label>
    <input type="number" size="10" id="exam" asp-for="Exam" /><br />
    <label>INTEX:</label>
    <input type="number" size="10" id="intex" asp-for="Intex" /><br /><br />
    <input id="calculate" type="submit" value="Calculate" />

    <div asp-validation-summary="All"></div>
</form>
